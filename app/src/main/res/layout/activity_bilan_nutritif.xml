<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Champ pour entrer le poids -->
    <EditText
        android:id="@+id/et_poids"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Entrez votre poids (kg)"
        android:inputType="numberDecimal" />

    <!-- Champ pour entrer la taille -->
    <EditText
        android:id="@+id/et_taille"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Entrez votre taille (m)"
        android:inputType="numberDecimal" />

    <!-- Bouton pour calculer -->
    <Button
        android:id="@+id/btn_calculer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculer IMC" />

    <!-- Texte pour afficher l'IMC -->
    <TextView
        android:id="@+id/tv_imc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre IMC : "
        android:visibility="gone"
        android:paddingTop="16dp"
        android:textSize="18sp" />

    <!-- Texte pour afficher les calories -->
    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories journaliÃ¨res : "
        android:visibility="gone"
        android:paddingTop="8dp"
        android:textSize="18sp" />

</LinearLayout>
