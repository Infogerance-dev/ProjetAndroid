<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Image de l'aliment -->
    <ImageView
        android:id="@+id/ivAliment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Image de l'aliment"
        android:icon="@drawable/bilan_nutritif_icon"
        android:scaleType="centerCrop" />

    <!-- Nom de l'aliment -->
    <TextView
        android:id="@+id/tvAlimentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Nom de l'aliment"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- espace pour que le bouton ajouter soit positionne a droite -->
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- Bouton pour ajouter Ã  la liste -->
    <Button
        android:id="@+id/btnAddToList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:text="Ajouter"
        android:backgroundTint="@color/Button"/>
</LinearLayout>
